<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="404" height="120" 
	cornerRadius="8" 
	backgroundAlpha="1" 
	backgroundColor="0xCCFFCC"
	initialize="init();"
	implements="it.lisit.siss.flex.core.IWait">
	
	<mx:Script>
		<![CDATA[
			import flash.filters.DropShadowFilter;
			import flash.filters.ColorMatrixFilter
			 
			 [Bindable] private var _title:String = "";
			 public function get title():String{return _title;}
			 public function set title(value:String):void{_title=value;}
			 private function init():void
			 {
			 	this.filters = [new DropShadowFilter(5,45,0,0.6,6,6)];
			 }
			 
			 
		]]>
	</mx:Script>
	
	<mx:VBox 
		width="100%" height="100%" 
		verticalGap="0" verticalAlign="top" 
		horizontalAlign="center" >
		<mx:HBox width="100%" horizontalAlign="left">
			<mx:Spacer width="10" />
			<mx:Label width="100%" fontSize="15" 
				fontWeight="bold" 
				text="{_title}" color="0x333333"
				filters="{[new BevelFilter(2,45,0xEE0000,0.6,0,0.4,3,3,1,1,BitmapFilterType.INNER)]}"/>	
		</mx:HBox>
		
		
		<mx:HRule width="100%" themeColor="0xE8FFE8" />
		
		<mx:HBox width="100%" height="100%"> 
			
		</mx:HBox>
	</mx:VBox>
</mx:Canvas>
