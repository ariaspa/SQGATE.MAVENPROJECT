<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import mx.core.mx_internal;
			use namespace mx_internal;
			//
			[Bindable] public var message:String;
			override protected function commitProperties():void
			{
				super.commitProperties();
				if(mx_internal::titleIconObject!=null)
				{
					DisplayObject(mx_internal::titleIconObject).width 	= 16;
					DisplayObject(mx_internal::titleIconObject).height 	= 16;
				}
			}
		]]>
	</mx:Script>
	<mx:Box width="100%" height="100%" 
		paddingBottom="50" paddingLeft="50" paddingRight="50" paddingTop="50">
		<mx:TextArea text="{message}" selectable="true" editable="false" width="100%" height="100%"/>	
	</mx:Box>
	
</mx:TitleWindow>
