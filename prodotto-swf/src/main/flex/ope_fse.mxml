<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
	creationPolicy="all"
	width="100%" height="100%"
	minWidth="960" minHeight="600"
	backgroundColor="#FFFFFF"
	paddingTop="0" paddingBottom="0"
	paddingLeft="0" paddingRight="0" 
	horizontalScrollPolicy="off" verticalScrollPolicy="off" 
	creationComplete="onCreationComplete(event)" 
	preloader="it.lispa.siss.sebc.flex.graphic.preloder.SissPreloader"
	xmlns:controler="com.li.dc.sebc.turboFSE.controler.*" 
	xmlns:nodeView="com.li.dc.sebc.turboFSE.view.nodeView.*" 
	xmlns:model="com.li.dc.sebc.turboFSE.model.*" 
	xmlns:serviceBusiness="com.li.dc.sebc.flex.serviceBusiness.*" 
	xmlns:turboBusiness="com.li.dc.sebc.turboFSE.business.*"  
	xmlns:controller="com.li.dc.sebc.turboFSE.controller.*"  
	xmlns:mediator="com.li.dc.sebc.turboFSE.view.mediator.*" 
	xmlns:icce="it.lispa.siss.library.remoting.icce.*">
	 
	<mx:Style source="../resources/css/turboFSE.css" />
	
	<mx:Script>
 		<![CDATA[
 		
 			import mx.events.StyleEvent;
 			import mx.events.FlexEvent;
 			import mx.events.IndexChangedEvent;
 			import it.lispa.siss.sebc.flex.mvc.controller.Controller;
 			 
 			import com.li.dc.sebc.turboFSE.view.mediator.ConstMediator;
 			import com.li.dc.sebc.turboFSE.view.mediator.TurboView;
 			import com.li.dc.sebc.turboFSE.model.FSEModel;
 		 	
 			import com.li.dc.sebc.turboFSE.controller.ConstCommand;
 			
 			private function onCreationComplete(e:Event):void
 			{	
 				//backgroundColor="#096B09"
 				//StyleManager.loadStyleDeclarations("../resources/css/turboFSE.css");
 				StyleManager.loadStyleDeclarations("/nicce/style-operatore-verde.swf");
 				//StyleManager.loadStyleDeclarations("/nicce/style-operatore-verde.swf");
 				// 1280 x 800
 				/* qui creo l'istanza iniziale e a cascata dentro ad ogni mediator l'istanza successiva layout="absolute" */
				TurboView.getInstance().createMediator( ConstMediator.ROOT, ConstMediator.ROOT, this.rootApp);
 				Controller.getInstance().executeCommand( ConstCommand.START_APPLICATION, this );
 			}
 		]]>
 	</mx:Script>
 	
 	<!--<icce:IccePanelEmbedder -->   
 	<!-- Root grafica di tutta l'applicazione -->
 	<nodeView:Root id="rootApp" />
 	<!-- Istanziazione dei servizi  
 	<turboBusiness:FSEServiceLocator />-->
 	<!-- Istanzio il controler prima di ogni altra cosa , contiene tutti i command -->
 	<controller:FSEController />
	<!-- Modello dei dati  -->
	<model:FSEModel />
	<!-- Modello dei mediator  -->
	<mediator:TurboView />
	 
</mx:Application> 