<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	paddingLeft="4" paddingRight="4" paddingTop="0" paddingBottom="4" 
	showCloseButton="true"
	headerHeight="26"
	headerColors="{headerColors}"
	title="{titolo}"
	borderStyle="none"
	textAlign="center"
	backgroundColor="{_bckColor}"
	backgroundAlpha="1"> 
	  
	<mx:Script>
		<![CDATA[
			/* 
			import it.lispa.siss.sebc.flex.graphic.timeline.skin.SkinCalendarButton;
			import com.li.dc.sebc.turboFSE.view.skin.BorderSkinPopUpTitle;
			import com.li.dc.sebc.turboFSE.view.skin.BorderSkinPopUp;
 			*/			
 			import mx.skins.ProgrammaticSkin;
			import mx.skins.halo.PanelSkin;
			import mx.core.UIComponent;
			import mx.utils.ColorUtil;
			import com.li.dc.sebc.turboFSE.util.UtilColor;
		 	import mx.events.CloseEvent;
		 	import mx.core.mx_internal;
		 	
		 	use namespace mx_internal;
		 	///////////////////////////////////////////////////////			_bckColor
		 	/* titleBackgroundSkin="{BorderSkinPopUpTitle}" 
			borderSkin="{BorderSkinPopUp}" */ 
		 	[Bindable] public var titolo:String 		= " ";
			[Bindable] public var body:String 			= " ";
		 	///////////////////////////////////////////////////////			
			[Bindable] private var _bckColor:int		= 0xFFFFFF;
			[Bindable] private var borderColor:int		= 0xFFFFFF;
			[Bindable] private var headerColors:Array	= [0xFFFFFF,0xFFFFFF];
			public function get bckColor():int
			{
				return _bckColor;
			}
			public function set bckColor(value:int):void
			{
				this.setStyle("titleColor",null);
				//this.setStyle("buttonColor",0xFFFFFF);
				//this.setStyle("themeColor",_bckColor);
				_bckColor 		= value;
				//borderColor	= ColorUtil.adjustBrightness(_bckColor,-50);
				//var hc:int 	= ColorUtil.adjustBrightness(_bckColor,60);
				headerColors 	= [_bckColor,_bckColor];
				
			}
			        
			/////////////////////////////////////////////////////// 
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" verticalGap="0" horizontalAlign="center" verticalAlign="middle" 
				backgroundColor="0xD1D1D1" backgroundAlpha="1">
				
		<mx:Text htmlText="{body}" width="100%" height="100%"  />
		 
		<!--<mx:TextArea htmlText="{body}" width="100%" height="100%" backgroundColor="0xF2F2F2" backgroundAlpha="0.5"/>-->
	</mx:VBox>
	
</mx:TitleWindow>
